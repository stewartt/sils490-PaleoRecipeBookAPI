<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Paleo Data: <%=item.main_ingredient%></title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
    <div id="one-ingredient">
        <a href="/ingredient/<%=item._id%>">
            <h1>One Ingredient at a Time:</h1>
        </a>   
        <dl>
        <span itemscope itemtype="http://www.schema.org/Recipe">
            <dt>Main Ingredient</dt>
                <dd itemprop="ingredients" rel="one-ingredient" title="name-ingredient" ><%=item.main_ingredient%></dd>
        </span>
        <span itemscope itemtype="http://www.schema.org/Recipe">
            <dt>Recipes</dt>
                <dd>
                    <% if (same_items.length > 0) { %>
                        <ul class="list-recipes">
                            <% same_items.forEach(function(same_item) { %>
                                <% if (same_item.main_ingredient == item.main_ingredient) { %>
                                    <li itemprop="name" rel="recipe-name" title="title">
                                        <a href="/recipe/<%=same_item.id%>">
                                            <%=same_item.recipe%>
                                        </a>
                                    </li>                            
                                <% } else { %>
                            
                                <% } %>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        No main ingredients have been added to this recipe.
                    <% } %>
                </dd>
        </span>
            </dl>  
        </div>
        <div>
            <table border ="1">
                <tr>
                    <td>
                        <h4>Navigate to:</h4>
                    </td>
                    <td class="navigation">
                        <a href="/" rel="home-page">
                            <h4>Paleo Data Home</h4>
                         </a>
                    </td>
                    <td class="navigation" rel="all-recipes">
                        <a href="/recipe/">
                            <h4>List of Recipes</h4>
                        </a>
                    </td>
                    <td class="navigation">
                        <a href="/ingredient/" rel="all-ingredients">
                            <h4>List of Ingredients</h4>
                        </a>
                    </td>
                </tr>
            </table>
        <div>
        
    </body>
</html>
